<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Student</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <br>
                <h2>Add Student</h2>
                <hr />
                <form method="post" action="/students/add">
                    <div class="form-group">
                        <label for="firstName">First Name:</label>
                        <input type="text" id="firstName" name="firstName" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name:</label>
                        <input type="text" id="lastName" name="lastName" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="addressStreet">Address:</label>
                        <input type="text" id="addressStreet" name="addressStreet" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="yearLevel">Year Level:</label>
                        <input type="number" id="yearLevel" name="yearLevel" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Status:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="fullTime" name="status" value="Full Time" required>
                            <label class="form-check-label" for="fullTime">Full Time</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="partTime" name="status" value="Part Time" required>
                            <label class="form-check-label" for="partTime">Part Time</label>
                        </div>
                    </div>
                    <!-- Course selection -->
                    <div class="form-group">
                        <label for="course">Course:</label>
                        {{#if courses}}
                        <select class="form-control" name="course" id="course">
                            <option value="">Select Course</option>
                            {{#each courses}}
                            <option value="{{this.courseId}}">{{this.courseCode}}</option>
                            {{/each}}
                        </select>
                        {{else}}
                        <div>No Courses</div>
                        {{/if}}
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
